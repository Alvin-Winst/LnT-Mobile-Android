<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SecondFragment_1"
    android:background="@color/amethyst">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingTop="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Square Calculator"
                    android:textSize="35dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="25dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kalkulator luas persegi"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="28dp"
                    android:textColor="@color/yellow"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rumus: panjang sisi x panjang sisi"
                    android:textSize="15dp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="28dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Panjang sisi:"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="28dp" />
                <EditText
                    android:id="@+id/sisiPersegi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/white"
                    android:textColorHint="@color/amethyst_gray"
                    android:inputType="number"
                    android:hint="Contoh: 1023"
                    android:textStyle="bold"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="150dp"/>

            </LinearLayout>
            <Button
                android:id="@+id/hitungPersegi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="275dp"
                android:layout_marginTop="140dp"
                android:text="Hitung"
                />
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="205dp"
                app:dividerColor="@color/purple_200"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hasil:"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="225dp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:textSize="20dp" />
            <TextView
                android:id="@+id/hasilPersegi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="225dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="50dp"
                android:textSize="20dp" />
        </FrameLayout>

    </ScrollView>

</FrameLayout>