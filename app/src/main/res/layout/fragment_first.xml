<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment"
    android:background="@color/amethyst">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="Counter"
        android:textSize="60dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="Mari belajar penjumlahan dan pengurangan!"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/counter"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="284.5dp"
        android:text="0"
        android:autoSizeTextType="uniform"
        android:autoSizeStepGranularity="1dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="346.75dp"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:textColor="@color/white"/>
    <Button
        android:id="@+id/btn_minus"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:text="-"
        android:textSize="50dp"
        android:layout_marginRight="125dp"
        android:layout_marginBottom="62.5dp"
        android:backgroundTint="@color/purple_500" />
    <Button
        android:id="@+id/btn_plus"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:textStyle="bold"
        android:text="+"
        android:textSize="50dp"
        android:layout_marginLeft="125dp"
        android:layout_marginBottom="62.5dp"
        android:backgroundTint="@color/purple_500"/>
    <Button
        android:id="@+id/btn_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:layout_gravity="center"
        android:textSize="50dp"
        android:layout_marginTop="62.5dp"
        android:backgroundTint="@color/purple_500" />
</FrameLayout>