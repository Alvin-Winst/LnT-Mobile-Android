<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SecondFragment_2"
    android:background="@color/amethyst">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"
                android:paddingTop="5dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Triangle Calculator"
                    android:textSize="35dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kalkulator luas segitiga"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/yellow"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rumus: (panjang alas x tinggi) รท 2"
                    android:textSize="15dp"
                    android:textColor="@color/white"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Panjang alas:"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="15dp"
                    android:textSize="20dp" />
                <EditText
                    android:id="@+id/alasSegitiga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/white"
                    android:textColorHint="@color/amethyst_gray"
                    android:inputType="number"
                    android:hint="Contoh: 1023"
                    android:layout_marginRight="150dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tinggi:"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:textSize="20dp" />
                <EditText
                    android:id="@+id/tinggiSegitiga"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:textColor="@color/white"
                    android:textColorHint="@color/amethyst_gray"
                    android:inputType="number"
                    android:hint="Contoh: 999"
                    android:layout_marginRight="150dp"
                    android:textStyle="bold"/>

            </LinearLayout>
            <Button
                android:id="@+id/hitungSegitiga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="275dp"
                android:layout_marginTop="170dp"
                android:text="Hitung"
                />
            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_marginTop="280dp"
                app:dividerColor="@color/purple_200" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hasil:"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="305dp"
                android:layout_marginLeft="28dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/hasilSegitiga"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginTop="305dp"
                android:textSize="20dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="50dp"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </FrameLayout>
    </ScrollView>


</FrameLayout>