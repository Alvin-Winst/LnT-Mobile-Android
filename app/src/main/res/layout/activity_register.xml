<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:paddingTop="80dp"
    android:paddingBottom="80dp"
    android:orientation="vertical"
    android:background="@color/amethyst"
    android:gravity="center">


    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="35dp"
        android:background="@color/amethyst_gray">
        <TextView
            android:id="@+id/regis_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:textStyle="bold"
            android:text="Register"
            android:layout_marginBottom="200dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/white"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:id="@+id/id_bimbel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID Bimbel"
            android:textSize="20dp"
            android:layout_marginBottom="125dp"
            android:textColorHint="@color/white"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/id_bimbel"
            android:hint="Email"
            android:textSize="20dp"
            android:layout_marginBottom="65dp"
            android:textStyle="bold"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:layout_gravity="center_vertical"/>

        <EditText
            android:id="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/email"
            android:hint="Nama"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginBottom="5dp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/nama"
            android:hint="Password"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="55dp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:layout_gravity="center_vertical"
            android:inputType="textPassword"/>
        <EditText
            android:id="@+id/conf_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/pass"
            android:hint="Konfirmasi Password"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="115dp"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:layout_gravity="center_vertical"
            android:inputType="textPassword"/>
        <Button
            android:id="@+id/btn_regis"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="185dp"
            android:layout_marginLeft="75dp"
            android:layout_marginRight="75dp"
            android:text="Register"
            android:textStyle="bold"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Already have an account?"
            android:textColor="@color/white"
            android:layout_gravity="bottom"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/link_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login here"
            android:textColor="@color/white"
            android:layout_gravity="bottom"
            android:textAlignment="textEnd"
            android:linksClickable="true"
            android:textStyle="bold"/>
    </FrameLayout>
</LinearLayout>